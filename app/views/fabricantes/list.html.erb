<% content_for :content do %>

    <div class="panel panel-default">
        <div class="panel-body" style="padding-right:0;padding-left:0;">
            <table class="table table-striped">
                <thead>
                    <tr>
                    <th>Descripcion</th>
                    <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                    <% @fabricantes.each do |fabricante| %>
                    <tr>
                        <td><%= fabricante.descripcion %></td>
                        <td><%= link_to 'Show', fabricante, {:class=>"btn btn-primary btn-sm"} %></td>
                        <td><%= link_to 'Edit', edit_fabricante_path(fabricante), {:class=>"btn btn-success btn-sm"} %></td>
                        <td><%= link_to 'Destroy', fabricante, method: :delete, data: { confirm: 'Are you sure?'}, :class=>'btn btn-warning btn-sm' %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class="panel-footer">
            <div class="digg_pagination">
                <div class="page_info">
                    <%= page_entries_info @fabricantes %>
                </div>
                <%= will_paginate @fabricantes, :container => false %>
            </div>
        </div>
            
    </div>

<% end %>

<% content_for :title do %> 
    Listado <%= link_to 'New','fabricantes/new', {:class=>"btn btn-info btn-sm",:style=>"float:right;margin-top:-10;"} %> 
<% end %>

<%= render template: 'layouts/appb' %>
