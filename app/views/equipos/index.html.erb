<p id="notice"><%= notice %></p>

<h1>Equipos</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Tipo equipo</th>
      <th>Fabricante</th>
      <th>Consultorio</th>
      <th>Fecha adquisicion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipos.each do |equipo| %>
      <tr>
        <td><%= equipo.descripcion %></td>
        <td><%= equipo.tipo_equipo_id %></td>
        <td><%= equipo.fabricante_id %></td>
        <td><%= equipo.consultorio_id %></td>
        <td><%= equipo.fecha_adquisicion %></td>
        <td><%= link_to 'Show', equipo %></td>
        <td><%= link_to 'Edit', edit_equipo_path(equipo) %></td>
        <td><%= link_to 'Destroy', equipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

